{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "VERIFRAX Certificate Schema",
  "description": "Schema for VERIFRAX verification certificates",
  "type": "object",
  "required": [
    "bundle_hash",
    "certificate_hash",
    "certificate_version",
    "executed_at",
    "profile_id",
    "verdict",
    "verifrax_version"
  ],
  "properties": {
    "bundle_hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$",
      "description": "SHA-256 hash of the evidence bundle"
    },
    "certificate_hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$",
      "description": "SHA-256 hash of the certificate itself"
    },
    "certificate_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "Semantic version of certificate format"
    },
    "executed_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of execution"
    },
    "profile_id": {
      "type": "string",
      "pattern": "^[a-z]+@[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "Profile identifier with version"
    },
    "reason_codes": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Failure reason codes (empty for verified)"
    },
    "verdict": {
      "type": "string",
      "enum": ["verified", "rejected", "invalid"],
      "description": "Verification result"
    },
    "verifrax_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "VERIFRAX engine version"
    }
  },
  "additionalProperties": false
}
