{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "verifrax_version",
    "certificate_version",
    "bundle_hash",
    "profile_id",
    "verdict",
    "reason_codes",
    "executed_at",
    "certificate_hash"
  ],
  "properties": {
    "verifrax_version": {
      "type": "string",
      "description": "VERIFRAX system version (e.g., '2.6.0')"
    },
    "certificate_version": {
      "type": "string",
      "description": "Certificate schema version (e.g., '1.0.0')"
    },
    "bundle_hash": {
      "type": "string",
      "pattern": "^[0-9a-f]{64}$",
      "description": "SHA-256 hash of evidence bundle (64 hex characters, no prefix)"
    },
    "profile_id": {
      "type": "string",
      "pattern": "^[a-z_]+@[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "Verification profile identifier (e.g., 'public@1.0.0')"
    },
    "verdict": {
      "type": "string",
      "enum": ["verified", "not_verified"],
      "description": "Verification result"
    },
    "reason_codes": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Array of reason codes (empty if verified)"
    },
    "executed_at": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}\\.[0-9]{3}Z$",
      "description": "RFC3339 timestamp in UTC with millisecond precision (e.g., '2025-01-01T12:00:00.000Z')"
    },
    "certificate_hash": {
      "type": "string",
      "pattern": "^[0-9a-f]{64}$",
      "description": "SHA-256 hash of canonical certificate bytes (64 hex characters, no prefix)"
    }
  },
  "additionalProperties": false
}

