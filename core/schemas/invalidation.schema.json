{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://verifrax.org/schemas/invalidation/v1",
  "title": "VERIFRAX Invalidation Schema v1",
  "description": "Retroactive invalidation mechanism",
  "type": "object",
  "required": [
    "invalidation_id",
    "targets",
    "basis",
    "issuer",
    "issued_at",
    "signature"
  ],
  "properties": {
    "invalidation_id": {
      "type": "string",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$",
      "description": "Unique identifier (UUID)"
    },
    "targets": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "identifier"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["claim_id", "bundle_hash"],
            "description": "Type of target"
          },
          "identifier": {
            "type": "string",
            "description": "The claim_id or bundle_hash being invalidated"
          }
        }
      },
      "minItems": 1,
      "description": "Array of claim_id or bundle_hash being invalidated"
    },
    "basis": {
      "type": "object",
      "required": ["reason_codes", "evidence_refs"],
      "properties": {
        "reason_codes": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^VFX-[A-Z]+-[0-9]{4}$"
          },
          "description": "Reason codes that justify invalidation"
        },
        "evidence_refs": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["evidence_id", "evidence_type"],
            "properties": {
              "evidence_id": { "type": "string" },
              "evidence_type": { "type": "string" },
              "hash": { "type": "string" }
            }
          },
          "description": "Evidence references that justify invalidation"
        },
        "description": {
          "type": "string",
          "description": "Human-readable description of why this invalidation is justified"
        }
      }
    },
    "issuer": {
      "type": "object",
      "required": ["org", "key_id"],
      "properties": {
        "org": { "type": "string" },
        "key_id": { "type": "string" },
        "name": { "type": "string" }
      }
    },
    "issued_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO8601 timestamp"
    },
    "signature": {
      "type": "object",
      "required": ["algorithm", "value", "public_key_ref"],
      "properties": {
        "algorithm": {
          "type": "string",
          "enum": ["ECDSA-P256", "ECDSA-P384", "Ed25519", "RSA-PSS-2048", "RSA-PSS-4096"],
          "description": "Signature algorithm"
        },
        "value": {
          "type": "string",
          "description": "Base64-encoded signature value"
        },
        "public_key_ref": {
          "type": "string",
          "description": "Reference to public key for verification"
        }
      }
    }
  }
}

