{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://verifrax.org/schemas/contradiction-registry/v1",
  "title": "VERIFRAX Contradiction Registry Schema v1",
  "description": "Public contradiction registry - append-only",
  "type": "object",
  "required": [
    "subject",
    "claim_ids",
    "verdict_id",
    "timestamp"
  ],
  "properties": {
    "subject": {
      "type": "string",
      "description": "Subject identifier that has contradictory claims"
    },
    "claim_ids": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 2,
      "description": "Array of claim IDs that contradict each other"
    },
    "verdict_id": {
      "type": "string",
      "pattern": "^VFXV1:sha256:[a-f0-9]{64}:sha256:[a-f0-9]{64}$",
      "description": "Verdict ID that detected the contradiction"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO8601 timestamp when contradiction was detected"
    }
  }
}

